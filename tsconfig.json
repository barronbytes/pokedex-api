{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src", // Location of input (original) TypeScript code
    "outDir": "./dist", // Location of output (compiled) JavaScript code
    "strict": true,
    "target": "esnext", // What JavaScript language FEATURES get compiled
    "module": "esnext", // What JavaScript MODULE FORMAT gets compiled
    "moduleResolution": "Node", // How TypeScript finds imported files (import ... from ...)
    "esModuleInterop": true, // How TypeScript handles default imports from CommonJS modules (affects type-checking and compiled JS)
    "skipLibCheck": true // What TypeScript skips during type-checking (.d.ts declaration files in node_modules)
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
